inclue "std.wati";

fonction observer (t) fait 
    valeur_depart = *t;
    tant que 1 fait 
        si *t != valeur_depart alors 
            !println("Detection changement de valeur : " + !char(*t) + "\nChangement pour : " + !char(valeur_depart))
            *t = valeur_depart;
        fin
    fin
fin

i = 69;
t = &i;

tache (!observer, t);
pour x allant de 0 a 100 fait 
    !dors(1)
    r = !inputln("Valeur : ");
    si r != "" alors
        i = r;
    fin
fin