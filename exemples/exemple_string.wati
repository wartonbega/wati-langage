// Exemple d'utilisation des strings en wati

fonction phrase (t) fait 
    renvoie "le " + !char(t) + " c'est délicieux";
fin

// Petite faute de frappe
choco = string("chocolet");
!imprime("Faute : ", choco, "\n");

// On clone le string
choco_bis = choco;
!choco_bis.remplace("e", "a"); // Et on enlève la faute
!imprime("Corrigé : ", choco_bis, "\n");

r = !phrase(choco_bis); // Et voilà qu'on en fait une phrase
!imprime("La phrase : ", r, "\n");